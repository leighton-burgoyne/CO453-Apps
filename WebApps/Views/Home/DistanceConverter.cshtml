@model ConsoleAppProject.App01.DistanceConverter
@using ConsoleAppProject.App01
@{
    ViewData["Title"] = "LB WebApps | Distance Converter";
}
<header class="text-center jumbotron justify-content-center">
    <h1 class="display-4">Distance Converter</h1>
    <p>
        This App will allow you to convert a range of Distance Measurements to Feet, Miles, or Metres.
    </p>
</header>
<section>
    <form method="post">
        <h2>Converting from</h2>
        <p>
            Please enter the Value and Unit of Distance that you wish to convert from
        </p>
        <p>
            <select asp-for="@Model.FromUnit" 
                asp-items="@Html.GetEnumSelectList<DistanceUnits>()">
            </select>
        </p>
        <p>
            @if (Model.FromDistance == 0)
            {
                <input type="text" asp-for="@Model.FromDistance" value="" placeholder="From Distance" required />
            }
            else
            {
                <input type="text" asp-for="@Model.FromDistance" placeholder="From Distance" required />
            }
        </p>
        <h2>Converting to</h2>
        <p>
            Please enter the Unit of Distance that you wish to convert to
        </p>
        <p>
            <select asp-for="@Model.ToUnit" 
                asp-items="@Html.GetEnumSelectList<DistanceUnits>()">
            </select>
        </p>
        <p>
            @if (Model.ToDistance == 0)
            {
                <input type="text" asp-for="@Model.ToDistance" value="" placeholder="To Distance" readonly />
            }
            else
            {
                <input type="text" asp-for="@Model.ToDistance" value="@Model.ToDistance.ToString("0.00")" placeholder="To Distance" readonly />
            }
        </p>
        <p>
            <button class="btn btn-success" type="submit">Convert</button>
        </p>
    </form>
</section>

